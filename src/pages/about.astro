---
import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import Hero from '../components/Hero.astro';
---

<BaseLayout title="A propos | Margaux Tarayre" description="Découvrez le parcours de Margaux Tarayre, Développeuse Fullstack et Product Engineer.">
	<div class="stack gap-20">
		<main class="wrapper about">
			<Hero
				title="À propos"
				tagline="Développeuse Fullstack & Profil Hybride UX/UI."
			>
					
			</Hero>
	
			<section>
				<h2 class="section-title">Education</h2>
				<div class="content">
					<p>
						<strong>IIM Digital School</strong> (3 mois - 2023)<br>
						Cursus intensif UX & UI Design<br>
						<em style="font-size: 0.9em; color: var(--gray-300);">Modules validés : Design System, Maquettage Figma, User Research.</em>
					</p>
					<p>
						<strong>Sorbonne Université</strong> (2022 - 2023)<br>
						Licence Professionnelle - Développement Web & Mobile<br>
						<em style="font-size: 0.9em; color: var(--gray-300);">En alternance</em>
					</p>
					<p>
						<strong>OpenClassrooms</strong> (2020 - 2023)<br>
						Développeur d'application - JavaScript React (Niveau Bac+3/4)
					</p>
					<p>
						<strong>Epitech</strong> (2018 - 2020)<br>
						Bachelor informatique (Cycle préparatoire)
					</p>
				</div>
			</section>
			<section>
				<h2 class="section-title">Education</h2>
				<div class="content">
					<p>
						<strong>IIM Digital School</strong> (2023 - 2024)<br>
						UX & UI Design (Formation intensive)
					</p>
					<p>
						<strong>OpenClassrooms</strong> (2020 - 2023)<br>
						Développeur d'application - JavaScript React (Niveau Bac+3/4)
					</p>
					<p>
						<strong>Epitech</strong> (2018 - 2020)<br>
						Bachelor informatique (Cycle préparatoire)
					</p>
				</div>
			</section>
			<section>
				<h2 class="section-title">Skills</h2>
				<div class="content">
					<p><strong>Front-End :</strong> React.js, Next.js, TypeScript, Sass, Redux</p>
					<p><strong>Back-End :</strong> Node.js, Express, MongoDB, SQL, API REST</p>
					<p><strong>Design & Tools :</strong> Figma, Adobe XD, Prototypage, Design Systems</p>
					<p><strong>Soft Skills :</strong> Sensibilité Produit, Communication Tech/Design, Rigueur, Autonomie</p>
				</div>
			</section>
		</main>
		<div class="button-container">
			<a href="/assets/CV-Margaux-Tarayre-Dev-Web-react.pdf" download="CV-Margaux-Tarayre-Dev-Web-react.pdf" class="custom-button" style="text-decoration: none;">Télécharger mon CV</a>
		</div>
		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	img {
		margin-top: 1.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

	.button-container {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.custom-button {
		padding: 10px 20px;
		margin: 20px 20px;
		border-radius: 999rem;
		font-size: 16px;
		text-decoration: none;
		color: var(--accent-text-over);
		background: var(--gradient-accent-orange);
		background-size: 100% 200%;
		background-position: 0% 100%;
		transition: background-position 0.3s, color 0.3s;
	}

	.custom-button:hover {
		color: var(--accent-text-over);
		background-position: 0% 0%;
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-xl);
		color: var(--gray-0);
	}

	.content {
		grid-column: 2 / 4;
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	@media (min-width: 50em) {
		.about {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.about > :global(:first-child) {
			grid-column-start: 2;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
		}
	}
</style>